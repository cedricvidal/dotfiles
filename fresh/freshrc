fresh freshshell/fresh bin/fresh --bin

fresh direnv/direnvrc --file
fresh git/gitconfig --file
fresh boot2docker/profile --file=~/.boot2docker/profile

fresh bin/idea --bin
fresh bin/public-ip --bin
fresh bin/local-ip --bin
fresh bin/adduser --bin

if [[ "$OSTYPE" == "darwin"* ]]; then

	# Convert XML plist to binary and link it
	fresh prefs/controlplane.plist --file=~/Library/Preferences/com.dustinrue.ControlPlane.plist --filter="plutil -convert binary1 -o - -"

fi

